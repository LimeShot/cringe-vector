<Window x:Class="VectorPaint.ResizeCanvasDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменение размера холста"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Width="300" Height="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Ширина:" Margin="10"/>
        <TextBox x:Name="WidthTextBox" Grid.Row="1" Margin="10"/>

        <TextBlock Text="Высота:" Grid.Row="2" Margin="10"/>
        <TextBox x:Name="HeightTextBox" Grid.Row="3" Margin="10"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button Content="OK" Width="80" Click="OK_Click"/>
            <Button Content="Отмена" Width="80" Margin="10,0,0,0" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
